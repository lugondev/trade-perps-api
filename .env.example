# Application Configuration
NODE_ENV=development
PORT=3000

# =============================================================================
# ASTER DEX API Configuration
# =============================================================================
# REST API Base URL
ASTER_REST_URL=https://fapi.asterdex.com

# WebSocket URL
ASTER_WS_URL=wss://fstream.asterdex.com

# API Authentication - HMAC Method
# Get these from Aster DEX API dashboard
ASTER_API_KEY=your_api_key_here
ASTER_API_SECRET=your_api_secret_here

# Wallet Addresses
# Main account wallet address (the trading account)
ASTER_USER_ADDRESS=your_main_wallet_address

# API signer wallet address (for signing requests)
ASTER_SIGNER_ADDRESS=your_signer_wallet_address

# Private Key (for cryptographic signing)
# WARNING: Keep this secure and never commit to version control
ASTER_PRIVATE_KEY=your_private_key_here

# =============================================================================
# HYPERLIQUID Configuration
# =============================================================================
HYPERLIQUID_REST_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WS_URL=wss://api.hyperliquid.xyz/ws
HYPERLIQUID_USER_ADDRESS=your_user_address_here
HYPERLIQUID_API_WALLET=your_api_wallet_address_here
HYPERLIQUID_API_PRIVATE_KEY=your_hyperliquid_private_key_here

# =============================================================================
# BINANCE FUTURES Configuration
# =============================================================================
BINANCE_REST_URL=https://fapi.binance.com
BINANCE_WS_URL=wss://fstream.binance.com/ws
BINANCE_TESTNET_REST_URL=https://testnet.binancefuture.com
BINANCE_TESTNET_WS_URL=wss://stream.binancefuture.com/ws
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_USE_TESTNET=false

# =============================================================================
# OKX Configuration
# =============================================================================
# Live Trading URLs
OKX_REST_URL=https://www.okx.com
OKX_WS_URL=wss://ws.okx.com:8443/ws/v5/public

# Demo Trading URLs (used when OKX_USE_SIMULATED=true)
OKX_DEMO_REST_URL=https://www.okx.com
OKX_DEMO_WS_URL=wss://wspap.okx.com:8443/ws/v5/public?brokerId=9999

# API Credentials (create separate keys for demo and live trading)
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSPHRASE=your_okx_passphrase_here

# Set to true for demo trading, false for live trading
# IMPORTANT: Use demo trading API keys when OKX_USE_SIMULATED=true
OKX_USE_SIMULATED=false

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=debug

# =============================================================================
# Security
# =============================================================================
JWT_SECRET=your-jwt-secret-here

# API Access Control
# This API key is required in the X-API-Key header to access protected endpoints
API_KEY_ACCESS=your_api_key_access_here

# =============================================================================
# Trading Configuration (Optional)
# =============================================================================
# Default leverage for positions
DEFAULT_LEVERAGE=10

# Risk management
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=5

