# Application Configuration
NODE_ENV=development
PORT=3000

# Aster DEX API Configuration
# REST API Base URL
ASTER_REST_URL=https://fapi.asterdex.com

# WebSocket URL
ASTER_WS_URL=wss://fstream.asterdex.com

# API Authentication - HMAC Method
# Get these from Aster DEX API dashboard
ASTER_API_KEY=your_api_key_here
ASTER_API_SECRET=your_api_secret_here

# Wallet Addresses
# Main account wallet address (the trading account)
ASTER_USER_ADDRESS=your_main_wallet_address

# API signer wallet address (for signing requests)
ASTER_SIGNER_ADDRESS=your_signer_wallet_address

# Private Key (for cryptographic signing)
# WARNING: Keep this secure and never commit to version control
ASTER_PRIVATE_KEY=your_private_key_here

# Logging
LOG_LEVEL=debug

# Security
JWT_SECRET=your-jwt-secret-here

# API Access Control
# This API key is required in the X-API-Key header to access protected endpoints
API_KEY_ACCESS=your_api_key_access_here

# Trading Configuration (Optional)
# Default leverage for positions
DEFAULT_LEVERAGE=10

# Risk management
MAX_POSITION_SIZE=1000
STOP_LOSS_PERCENTAGE=2
TAKE_PROFIT_PERCENTAGE=5
